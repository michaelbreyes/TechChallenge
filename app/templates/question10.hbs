        </div>
        <div class="inline">
            <div class="image-logo-container">
                <img src="images/twitter.jpg" class="image-logo" />
            </div>
            {{view Ember.TextField valueBinding="answer5"}}
        </div>
        <div class="inline">
            <div class="image-logo-container">
                <img src="images/js.jpg" class="image-logo" />
            </div>
            {{view Ember.TextField valueBinding="answer6"}}
        </div>
        <div class="inline">
            <div class="image-logo-container">
                <img src="images/mozilla.png" class="image-logo" />
            </div>
            {{view Ember.TextField valueBinding="answer7"}}
        </div>
        <div class="inline">
            <div class="image-logo-container">
                <img src="images/myspace.png" class="image-logo" />
            </div>
            {{view Ember.TextField valueBinding="answer8"}}
        </div>
    </div>

    {{#view App.SubmitView}}
        <button class="submit btn btn-primary">
            Submit Answer
        </button>
    {{/view}}
</div>