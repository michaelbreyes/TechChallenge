                <img src="images/adobe.png" class="image-logo" />
            </div>
            {{view Ember.TextField valueBinding="answer1"}}
        </div>
        <div class="inline">
            <div class="image-logo-container">
                <img src="images/atari.gif" class="image-logo" />
            </div>
            {{view Ember.TextField valueBinding="answer2"}}
        </div>
        <div class="inline">
            <div class="image-logo-container">
                <img src="images/toyota.jpg" class="image-logo" />
            </div>
            {{view Ember.TextField valueBinding="answer3"}}
        </div>
